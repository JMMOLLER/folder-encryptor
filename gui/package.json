{
  "name": "akira-folder-encryptor",
  "version": "1.0.0",
  "description": "Folder encryption and decryption tool",
  "main": "./out/main/index.js",
  "author": "JMMOLLER",
  "homepage": "https://github.com/JMMOLLER/folder-encryptor",
  "build": {
    "appId": "com.jmmoller.akira.app",
    "productName": "Akira - Folder Encryptor",
    "extraResources": [
      "./script/service_x64.exe"
    ],
    "win": {
      "icon": "resources/win-icon.ico"
    }
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "dev-ws": "nodemon ./server/app.ts",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.0",
    "child_process": "^1.0.2",
    "cors": "^2.8.5",
    "electron-updater": "^6.1.1",
    "express": "^4.18.2",
    "express-ws": "^5.0.2",
    "framer-motion": "10.18.0",
    "morgan": "^1.10.0",
    "react-toastify": "^9.1.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^1.0.1",
    "@electron-toolkit/eslint-config-ts": "^1.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-ws": "^3.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.18.7",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "antd": "^5.12.6",
    "electron": "^25.6.0",
    "electron-builder": "^24.6.3",
    "electron-vite": "^1.0.27",
    "eslint": "^8.47.0",
    "eslint-plugin-react": "^7.33.2",
    "lottie-react": "^2.4.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.9"
  }
}
